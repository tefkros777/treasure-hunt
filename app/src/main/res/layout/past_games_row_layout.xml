<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardFoundGame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="#FFE8A3"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <!--Text-->
        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:id="@+id/vgFoundGame_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <!--Name-->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvFoundGame_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/hunt_name_placeholder"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--Everything else-->
            <com.google.android.material.circularreveal.CircularRevealLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvFoundGame_Difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_with_placeholder" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvFoundGame_Points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/points_gained_with_placeholder" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvFoundGame_FoundOn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/found_on_with_placeholder" />

            </com.google.android.material.circularreveal.CircularRevealLinearLayout>


        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

        <!--Graphic-->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFoundGames_Trophie"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/trophy1" />

    </com.google.android.material.circularreveal.CircularRevealLinearLayout>


</com.google.android.material.circularreveal.cardview.CircularRevealCardView>
